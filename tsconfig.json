{
"compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "emitDeclarationOnly": true
},
"exclude": ["node_modules"],
"include": ["**/*"],
"typeRoots": [
    "./server/types/",
    "./node_modules/@types/"
  ]
}